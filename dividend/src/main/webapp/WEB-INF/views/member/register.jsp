<script type="text/javascript">
$(function() {
	// 취소
	$(".cencle").on("click", function() {
		location.href = "/app";
	});
	
	$("#idChk").click(function() {
		idChk();
	});
	
	$("#idmod").click(function() {
		$(this).css("display", "none");
		$("#id").removeAttr("readonly");
		$("#idChk").attr("value", "N");
		$("#idChk").css("display", "block");
	});

	$("#submit").on("click", function() {
		if (!$("input:checked[id='chk1']").is(":checked")) {
			alert("서비스 이용약관 동의는 필수입니다.");
			$("#chk1").focus();
			return false;
		}
		if (!$("input:checked[id='chk2']").is(":checked")) {
			alert("개인정보 처리방침 동의는 필수입니다.");
			$("#chk2").focus();
			return false;
		}

		if ($("#id").val() == "") {
			alert("아이디를 입력해주세요.");
			$("#id").focus();
			return false;
		}
		if ($("#password").val() == "") {
			alert("비밀번호를 입력해주세요.");
			$("#password").focus();
			return false;
		}
		if ($("#password").val() != $("#password1").val()) {
			alert("비밀번호와 비밀번호 확인이 다릅니다.");
			$("#password").focus();
			return false;
		}
		if ($("#name").val() == "") {
			alert("닉네임을 입력해주세요.");
			$("#name").focus();
			return false;
		}
		var idChkVal = $("#idChk").val();
		if (idChkVal == "N") {
			alert("ID 중복확인을 해주세요.");
			return false;
		} else if (idChkVal == "Y") {
			$("#regForm").submit();
		}
	});
});

function idChk() {
	$.ajax({
		url : "idChk.do",
		type : "POST",
		dataType : "json",
		data : {
			"member_id" : $("#id").val()
		},
		success : function(data){
			if(data==1){
				alert("중복된 아이디입니다.");
			}else if(data==0 && $("#id").val().length > 0){
				alert("사용가능한 아이디입니다.");
				$("#idChk").attr("value", "Y");
				$("#id").attr("readonly", true);
				$("#idChk").css("display", "none");
				$("#idmod").css("display", "block");
			}else if ($("#id").val().length == 0) {
				alert("아이디를 입력해주세요.");
				$("#idChk").attr("value", "N");
			}
		}
	});
}
